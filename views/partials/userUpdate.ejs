<div id='user_update'>
	<form id='update_user' action='/updateprofile' method='POST'>
		<fieldset form='update_user' name='update_user'>
			<legend>Altere seus dados</legend>
				<div>
					<label title='User' for='username'>USERNAME</label>
					<input title='Username' class='inputup' id='user' type='text' name='username' placeholder='' readonly>
					<label title='nome' for='name'>NOME</label>
					<input title='Digite nome' class='inputup' minlength='1' maxlength='15' id='name' type='text' name='name' placeholder='yourname' required>
					<fieldset name='image'>
						<legend title='Selecione imagem' for='img'>Selecione imagem</legend>
						<div>
							<div id='roll_images'>
								<%pimg.forEach( i => {%>
								<label>
									<input class='imgd' type="radio" name="imgd" value="<%=i%>">
									<img src="<%=i%>">
								</label>
								<%})%>
							</div>
								<input title='Digite link da imagem' class='inputup' id='img' minlength='1' maxlength='150' type='url' name='img' placeholder='link for image'>
							<script type='text/javascript'>
								const radioc = document.querySelectorAll(".imgd");
								const desmarcar = document.querySelector("#img");
								
								radioc.forEach(r => {
									r.addEventListener('click', () => {
										desmarcar.value = r.value
									});
								});
								
								desmarcar.addEventListener('change', () => {
									radioc.forEach((input) => {
										input.checked = false;
									})
								});
							</script>
						</div>
					</fieldset>
					<label for='pw'>SENHA</label>
					<input class='inputup' id='pw' minlength='1' maxlength='10' type='password' name='pw' placeholder='*****' required>
				</div>
				<button type='submit'>Atualizar</button>
		</fieldset>
	</form>
	<div id='backbtn' onclick="cProfile('b')">
		<span>VOLTAR</span>
	</div>
	<div id='deletebtn' onclick="dProfile('deletar')">
		<span>Deletar usu√°rio</span>
	</div>

</div>
